<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
<!-- product的action包 -->
	<package name="product" extends="formulamind,json-default" namespace="/">
		<action name="productlist" class="productAction" method="productList">
			<result name="productlist">production/index.jsp</result>
		</action>
		<action name="productDetails" class="productAction" method="productDetails">
			<result name="productDetails">production/details.jsp</result>
		</action>
		<action name="addProduct" class="productAction" method="addProduct">
			<result name="productlist" type="redirectAction">productlist</result>
		</action>
		<action name="toAddProduct" class="productAction" method="toAddProduct">
			<result name="addProduct">production/add.jsp</result>
		</action>
		<action name="doAddProduct" class="productAction" method="doAddProduct">
			<result name="productlist" type="json"><param name="root">chemList
					<!-- result是action中设置的变量名，也是页面需要返回的数据，
					该变量必须有setter和getter方法 -->
				</param>productlist</result>
		</action>
	</package>
</struts>
